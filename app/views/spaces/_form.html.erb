<%= simple_form_for(@space) do |f| %>
  <% if @space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@space.errors.count, "error") %> prohibited this space from being saved:</h2>

      <ul>
      <% @space.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :name, placeholder: "what would you like to call your space?", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :wreck_or_reuse, placeholder: "is this a wreck or reuse space?", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :fee_or_free, placeholder: "is this space free, or is there a fee?", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :practice_or_perform, placeholder: "space for practices or performances?", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :sq_footage, placeholder: "square footage?", autocomplete: "off", class: "form-control" %>
  </div> 
  <div class="hidden">
    <%= f.number_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
    <%= f.submit "create space", class: "btn btn-default" %>
  </div>
  <div class="form-group">
  <%= link_to 'back', spaces_path, class: "btn btn-default" %>
  </div>

<% end %>
